{sub_dirs, ["rel",
            "deps",
            "apps/dev_info_db",
            "apps/device_service",
            "apps/device_info"]}.

{lib_dirs, ["deps",
            "apps"]}.
 
{deps, [
    {cqerl, "0.8.0", {git, "https://github.com/matehat/cqerl.git"}},
    {cowboy, "2.0.0-pre.1", {git, "https://github.com/ninenines/cowboy.git"}}
]}.

{recursive_cmds, [clean, compile, xref, ct, generate]}.

{erl_opts,
[warnings_as_errors,
 strict_validation,
 warn_bif_clash,
 %  warn_deprecated_function, % Because of cowboy using crypto:sha/1
 warn_export_all,
 warn_export_vars,
 warn_exported_vars,
 warn_obsolete_guard,
 warn_shadow_vars,
 warn_unused_import,
 warn_unused_function,
 warn_unused_record,
 warn_unused_vars
]}.

{xref_checks,
[undefined_function_calls,
 undefined_functions,
 locals_not_used,
 deprecated_function_calls,
 deprecated_functions
]}.

{eunit_exclude_deps, true}.
